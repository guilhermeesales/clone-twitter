<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Algo incorreto! Por favor, verifique os erros abaixo.</p>
    </div>
  <% end %>

  <div class="form-group">
    <%= textarea f, :content, placeholder: "Escreva sua postagem...", class: "form-control" %>
    <%= error_tag f, :content %>
  </div>

  <%= submit "POSTAR", class: "btn btn-primary" %>
<% end %>
