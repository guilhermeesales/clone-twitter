    <p>
      <strong><%= post.user.name %></strong>: <%= post.content %>
    </p>
    <p>
      <span id="post-likes-<%= post.id %>"><%= post.likes %>â¤ï¸</span>
      <i class="fa fa-heart" aria-hidden="true"></i>
      <span id="post-replies-<%= post.id %>"><%= post.replies %>ğŸ”</span>
    </p>
    <!-- BotÃ£o de exclusÃ£o -->
    <button onclick="confirmDelete(<%= post.id %>); return false;">Excluir</button>
  </div>
<% end %>

<script>
  function confirmDelete(postId) {
    // Perguntar se o usuÃ¡rio tem certeza
    if (confirm("VocÃª tem certeza que deseja excluir este post?")) {
      // Redirecionar para a rota de exclusÃ£o com o id do post
      window.location.href = "/posts/delete/" + postId;
    }
  }
</script>
