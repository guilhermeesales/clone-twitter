<h1>Meus posts</h1>
<%= for post <- @posts do %>
  <div class="post" id="post-<%= post.id %>">
    <p>
      <strong><%= post.user.name %></strong>: <%= post.content %>
    </p>
    <p>
      <span id="post-likes-<%= post.id %>"><%= post.likes %> Likes</span>
      <i class="fa fa-heart" aria-hidden="true"></i>
    </p>
    
<% end %>

