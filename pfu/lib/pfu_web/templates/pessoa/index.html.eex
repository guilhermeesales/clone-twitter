<h1>Lista de Pessoas</h1>
<table class="table">
    <tr>
        <td>ID</td>
        <td>First Name</td>
        <td>Detalhes</td>
    </tr>
    <%= for pessoa <- @pessoas do %>
        <tr>
            <td><%= pessoa.id %></td>
            <td><%= first_name(pessoa) %></td>
            <td>
                <%= link "VER", to: Routes.pessoa_path(@conn, :show, pessoa.id) %>
            </td>
        </tr>
    <% end %>
</table>
